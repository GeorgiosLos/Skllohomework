def celsius_to_fahrenheit(celsius):
    return (celsius * 9/5) + 32

def fahrenheit_to_celsius(fahrenheit):
    return (fahrenheit - 32) * 5/9

def main():
    print("Temperature Converter")

    # Get user input for temperature and unit
    temperature = float(input("Enter the temperature: "))
    unit = input("Enter the unit (C for Celsius, F for Fahrenheit): ").upper()

    if unit == 'C':
        # Convert Celsius to Fahrenheit
        converted_temperature = celsius_to_fahrenheit(temperature)
        print(f"{temperature}째C is equal to {converted_temperature:.2f}째F")
    elif unit == 'F':
        # Convert Fahrenheit to Celsius
        converted_temperature = fahrenheit_to_celsius(temperature)
        print(f"{temperature}째F is equal to {converted_temperature:.2f}째C")
    else:
        print("Invalid unit. Please enter 'C' or 'F'.")

if __name__ == "__main__":
    main()
